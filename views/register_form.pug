extends layout 

block content

  h1 Sign up!

  form(method="POST", action="")
    div.form-group 
      label(for="username") Username: 
      input.form-control(type="text" id="username" name="username" )
    div.form-group 
      label(for="email") Email: 
      input.form-control(type="text" id="email" name="email" required="true")
    div.form-group 
      label(for="password") Password: 
      input.form-control(type="password" id="password" name="password" required="true")
    div.form-group 
      label(for="confirm-password") Confirm Password: 
      input.form-control(type="password" id="confirm-password" name="confirm-password")
    div.form-group 
      input.btn.btn-primary(type="submit" value="Submit")